{
  "name": "oauth-hub",
  "version": "2.0.0",
  "description": "OAuth Hub - Complete OAuth2.1 backend with 37+ platforms support, deployed on Oracle Cloud with auto-deployment CI/CD",
  "main": "oauth-worker.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "tail": "wrangler tail --format pretty",
    "health": "curl https://oauth-hub.com/health",
    "test:local": "node examples/backend-integration.js",
    "docs:serve": "python -m http.server 8000",
    "version": "echo $npm_package_version",
    "start": "node server.js",
    "dev:node": "nodemon server.js",
    "build": "echo 'No build step needed for Node.js backend'",
    "deploy:oci": "echo 'Deploy to Oracle Cloud - use OCI CLI or Docker'"
  },
  "keywords": [
    "oauth",
    "oauth2",
    "oauth2-server",
    "oracle-cloud",
    "auto-deployment",
    "api",
    "authentication",
    "tokens",
    "pkce",
    "openid-connect",
    "social-media",
    "google",
    "facebook",
    "instagram",
    "twitter",
    "linkedin",
    "platforms",
    "express",
    "node.js"
  ],
  "author": "Gracier Digital",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jgracier/Oauth-Hub"
  },
  "bugs": {
    "url": "https://github.com/Jgracier/Oauth-Hub/issues"
  },
  "homepage": "https://github.com/Jgracier/Oauth-Hub#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241011.0",
    "playwright": "^1.55.0",
    "wrangler": "^3.84.1"
  },
  "dependencies": {
    "@node-oauth/oauth2-server": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "node-fetch": "^2.6.7",
    "oauth4webapi": "^3.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

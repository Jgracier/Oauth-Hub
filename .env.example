PORT=3000
NODE_ENV=production

# Oracle Database Configuration
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CONNECT_STRING=your_oci_db_connection_string

# JWT and Session Secrets (generate your own secure random strings)
JWT_SECRET=your_secure_jwt_secret_here_64_chars_minimum
SESSION_SECRET=your_secure_session_secret_here_32_chars_minimum

# Google OAuth Credentials (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_from_console
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_console

# GitHub OAuth Credentials (get from GitHub Developer Settings)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Facebook OAuth Credentials (get from Facebook Developers)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Legacy OAuth (for backward compatibility)
OAUTH_CLIENT_ID=default_client
OAUTH_CLIENT_SECRET=default_secret
